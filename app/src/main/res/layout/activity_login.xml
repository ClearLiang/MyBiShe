<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_login_head"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/tv_login_user"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="200dp"
        android:gravity="right|center_vertical"
        android:paddingRight="20dp"
        android:text="用户名"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_login_password"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/tv_login_user"
        android:layout_alignStart="@+id/tv_login_user"
        android:layout_below="@+id/et_login_user"
        android:layout_marginTop="50dp"
        android:gravity="right|center_vertical"
        android:paddingRight="20dp"
        android:text="密码"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_login_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_login_user"
        android:layout_marginRight="60dp"
        android:layout_toEndOf="@+id/tv_login_user"
        android:layout_toRightOf="@+id/tv_login_user"
        android:layout_marginEnd="60dp" />

    <EditText
        android:id="@+id/et_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_login_password"
        android:layout_marginRight="60dp"
        android:layout_toEndOf="@+id/tv_login_password"
        android:inputType="textPassword"
        android:layout_toRightOf="@+id/tv_login_password"
        android:layout_marginEnd="60dp" />

    <Button
        android:id="@+id/btn_login_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_login_password"
        android:layout_alignStart="@+id/tv_login_password"
        android:layout_below="@+id/et_login_password"
        android:layout_marginTop="49dp"
        android:text="登陆" />

    <Button
        android:id="@+id/btn_login_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_login_login"
        android:layout_alignBottom="@+id/btn_login_login"
        android:layout_alignEnd="@+id/et_login_password"
        android:layout_alignRight="@+id/et_login_password"
        android:text="IM测试" />

</RelativeLayout>